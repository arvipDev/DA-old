<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_grey">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:focusableInTouchMode="false"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_grey">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/favorite_profile_iv"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:id="@+id/favorite_profile_ll_name"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/favorite_profile_iv">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/favorite_profile_tv_name"
                android:textColor="@color/button_login"
                android:gravity="center"
                android:clickable="true"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:id="@+id/favorite_profile_ll_buttons"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:weightSum="2"
            android:layout_below="@+id/favorite_profile_ll_name">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:id="@+id/favorite_profile_b_share"
                android:layout_marginRight="2.5dp"
                android:text="Share Profile"
                android:background="@drawable/button_blue"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:id="@+id/favorite_profile_b_email"
                android:textAllCaps="false"
                android:text="Send email"
                android:layout_marginLeft="2.5dp"
                android:background="@drawable/button_blue"
                android:textColor="#ffffff" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:id="@+id/favorite_profile_ll_busdesc"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/favorite_profile_ll_buttons">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/favorite_profile_tv_busdesce"
                android:textColor="@color/button_login"
                android:text="Business Description:"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:id="@+id/favorite_profile_ll_bus"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/favorite_profile_ll_busdesc">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/favorite_profile_tv_bus"
                android:textColor="@color/button_login"
                android:maxLines = "5"
                android:inputType="textMultiLine"
                android:gravity="start"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="15sp"
                android:textStyle="normal"
                android:textAllCaps="false"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:id="@+id/favorite_profile_ll_pro_serv"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/favorite_profile_ll_bus">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/favorite_profile_tv_pro_serv"
                android:textColor="@color/button_login"
                android:text="Products and Services"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:id="@+id/favorite_profile_ll_pro_serv_list"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/favorite_profile_ll_pro_serv">

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/favorite_profile_lv_products_services"
                android:layout_below="@+id/favorite_profile_ll_pro_serv"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:background="@null"/>

            </LinearLayout>

        <ProgressBar
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:id="@+id/progress"
            android:layout_alignParentTop="true"
            android:layout_marginTop="75dp"
            android:layout_centerHorizontal="true"
            android:indeterminate="false"
            android:indeterminateDrawable="@drawable/progressbar"/>


    </RelativeLayout>

</ScrollView>
