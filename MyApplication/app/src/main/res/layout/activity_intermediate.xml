<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dealacceleration.Intermediate"
    android:background="#2a6f8f">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:id="@+id/intermediate_iv_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/splash"/>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/intermediate_progressBar"
        android:indeterminateDrawable="@drawable/progressbar_grey"
        android:indeterminate="false"
        android:layout_marginTop="117dp"
        android:layout_below="@+id/intermediate_iv_logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Loading..."
        android:textColor="@color/hint_text_color"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/textView"
        android:layout_below="@+id/intermediate_progressBar"
        android:layout_alignLeft="@+id/intermediate_iv_logo"
        android:layout_alignStart="@+id/intermediate_iv_logo"
        android:layout_marginTop="48dp" />

</RelativeLayout>
