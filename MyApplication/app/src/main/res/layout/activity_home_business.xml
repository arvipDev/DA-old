<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.dealacceleration.HomeBusinessActivity"
    android:background="#f4f4f4"
    android:id="@+id/business_rl_home">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/business_fl_menu"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/background_grey"
        android:id="@+id/business_fl_container">

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/business_fl_menu"
        android:layout_alignParentBottom="true"
        android:background="#f4f4f4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/business_home_ll_segment"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="left"
            android:weightSum="16"
            android:background="#f4f4f4">

            <services.SegmentedRadioGroupHome
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/business_home_rb_segment_type"
                android:checkedButton="@+id/business_button_one"
                android:background="@drawable/bottombar">
                <RadioButton
                    android:id="@+id/business_home_rb_profiles"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_weight="2"
                    android:button="@null"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="0dp"
                    android:checked="false" />
                <RadioButton
                    android:id="@+id/business_home_rb_myaccount"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_weight="2"
                    android:button="@null"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />
                <RadioButton
                    android:id="@+id/business_home_rb_mail"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_weight="2"
                    android:button="@null"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />
                <RadioButton
                    android:id="@+id/business_home_rb_favourites"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_weight="2"
                    android:button="@null"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:checked="false" />
            </services.SegmentedRadioGroupHome>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/business_home_ll_segment_text"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:gravity="left"
            android:weightSum="4"
            android:background="#d9d9d9"
            android:layout_gravity="left|bottom">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id= "@+id/business_home_tv_profile"
                android:layout_weight="1"
                android:text="@string/home_tv_profiles"
                android:textColor="@color/grey_button_text_color"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id= "@+id/business_home_tv_myprofile"
                android:layout_weight="1"
                android:text="@string/home_tv_myaccount"
                android:textColor="@color/grey_button_text_color"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id= "@+id/business_home_tv_email"
                android:layout_weight="1"
                android:text="@string/home_tv_mail"
                android:textColor="@color/grey_button_text_color"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id= "@+id/business_home_tv_favourites"
                android:layout_weight="1"
                android:text="@string/home_tv_favourite"
                android:textColor="@color/grey_button_text_color"
                android:gravity="center" />


        </LinearLayout>
    </FrameLayout>

</RelativeLayout>
