<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/business_home_account_sv">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="600dp"
        android:id="@+id/myaccount_socialmedia_rl"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.dealacceleration.MyAccountSocailMedia"
        android:background="@drawable/background_grey"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="@string/myaccount_socialmedia_tv_today_text"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/grey_button_text_color"
            android:id="@+id/myaccount_socialmedia_tv_today"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:background="@drawable/border"
            android:id="@+id/myaccount_socialmedia_tv_today"
            android:gravity="left"
            android:maxLines="8"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/grey_button_text_color"
            android:singleLine="false"
            android:layout_below="@+id/business_myaccount_editprofile_et_companyname"
            android:layout_marginTop="30dp"
            android:inputType="textMultiLine" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:id="@+id/myaccount_socialmedia_b_post"
            android:layout_marginTop="5dp"
            android:text="@string/myaccount_socialmedia_b_post_text"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@drawable/button_blue"
            android:layout_below="@+id/myaccount_socialmedia_tv_today"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="@string/myaccount_socialmedia_tv_wall_text"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/grey_button_text_color"
            android:id="@+id/myaccount_socialmedia_tv_wall"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/myaccount_socialmedia_b_post" />

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:id="@+id/myaccount_socialmedia_lv_wall"
            android:fadeScrollbars="false"
            android:scrollbarStyle="outsideInset"
            android:scrollbarTrackHorizontal="@drawable/scroll_track"
            android:scrollbarThumbHorizontal="@drawable/scroll_thumb"
            android:layout_below="@+id/myaccount_socialmedia_tv_wall" />

    </RelativeLayout>


</ScrollView>